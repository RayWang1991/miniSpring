<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://indi.ray.miniSpring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://indi.ray.miniSpring /Users/raywang/IdeaProjects/miniSpring/src/test/resources/schema/mySpring.xsd"
       default-autowire="byName">
    <bean id="logInterceptor" class="indi.ray.miniSpring.aop.functionTest.proxySetUp.MethodLoggerInterceptor"/>
    <bean id="performInterceptor" class="indi.ray.miniSpring.aop.functionTest.proxySetUp.MethodPerformanceInterceptor"/>
    <bean id="nameRecorder" class="java.util.ArrayList"/>
    <bean id="normRecorderInterceptor"
          class="indi.ray.miniSpring.aop.functionTest.proxySetUp.MethodNameRecordInterceptor">
        <constructor-arg>
            <ref>nameRecorder</ref>
        </constructor-arg>
    </bean>

    <bean id="doubleRecorderInterceptor"
          class="indi.ray.miniSpring.aop.functionTest.proxySetUp.MethodNameDoubleRecordInterceptor">
        <constructor-arg>
            <ref>nameRecorder</ref>
        </constructor-arg>
    </bean>


    <bean id="student" class="indi.ray.miniSpring.aop.Student"/>

    <bean class="indi.ray.miniSpring.aop.autoProxyCreator.BeanNameAutoProxyCreator">
        <property name="interceptorNames">
            <list type="java.lang.String">
                <value>logInterceptor</value>
                <value>performInterceptor</value>
                <value>normRecorderInterceptor</value>
                <value>doubleRecorderInterceptor</value>
            </list>
        </property>
        <property name="beanNames">
            <list type="java.lang.String">
                <value>student</value>
            </list>
        </property>
    </bean>

</beans>
